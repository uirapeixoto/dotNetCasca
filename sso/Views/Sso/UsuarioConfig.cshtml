@model sso.ViewModel.CiwebUsuarioConfigViewModel

@{
    ViewBag.Title = "UsuarioConfig";
}

<h2>Parâmetro de Execução</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>CIWEB</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.SituacaoUsuario, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                <div class="col-md-3">
                    @Html.EditorFor(model => model.UsuarioBloqueado)
                    @Html.LabelFor(model => model.UsuarioBloqueado)
                </div>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.RecadastrarSenha)
                    @Html.LabelFor(model => model.RecadastrarSenha)
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.FoiValidado, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.FoiValidado)
                @Html.ValidationMessageFor(model => model.FoiValidado, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FoiEditado, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.FoiEditado)
                @Html.ValidationMessageFor(model => model.FoiEditado, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar" class="btn btn-primary" />
        </div>
    </div>
    @{
        Html.RenderPartial("_PartialPageAlert");
    }

</div>
}

<div>
    @Html.ActionLink(" Voltar", "Index", "Home", null, new { @class = "glyphicon glyphicon-hand-left" })
</div>
