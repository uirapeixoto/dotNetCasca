@model sso.Models.SicaqUsuarioConfigModel

@{
    ViewBag.Title = "UsuarioConfig";
}

<h2>Parametros de execução do mock</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SICAQ</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Bloqueado, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Bloqueado)
                    @Html.ValidationMessageFor(model => model.Bloqueado, "", new { @class = "text-danger" })
                </div>
            </div>
            
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="DesbloquearUsuario">Desbloquear Usuário</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.DesbloquearUsuario)
                    @Html.ValidationMessageFor(model => model.DesbloquearUsuario, "", new { @class = "text-danger" })
                </div>
            </div>
            
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </div>
        <div class="form-group">
            <div>
                @{ 
                    Html.RenderPartial("_PartialPageAlert");
                }
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink(" Voltar", "Index", null, new { @class= "glyphicon glyphicon-hand-left" })
</div>
