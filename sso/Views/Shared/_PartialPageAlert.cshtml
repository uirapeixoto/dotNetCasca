@{
    var viewmessage = "";
    var veiwerrormessage = "";
    if (string.IsNullOrEmpty(ViewBag.Mensagem))
    {
        viewmessage = "hidden";
    }
    if (string.IsNullOrEmpty(ViewBag.MensagemErro))
    {
        veiwerrormessage = "hidden";
    }
}

<div class="form-group @viewmessage">
    <div class="col-md-pull-3 col-md-offset-2 col-md-8">
        <div class="alert alert-success" role="alert">
            <strong>Mensagem: </strong>@ViewBag.Mensagem
        </div>
    </div>
</div>
<div class="form-group @veiwerrormessage">
    <div class="col-md-pull-3 col-md-offset-2 col-md-8">
        <div class="alert alert-danger" role="alert">
            <strong>Mensagem: </strong>@ViewBag.MensagemErro
        </div>
    </div>
</div>
